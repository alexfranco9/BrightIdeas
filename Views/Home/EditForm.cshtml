@model Idea

<h1>Edit your idea.</h1>

<div>
    <form class="form-group"  asp-controller="Home" asp-action="SubmitEdit" method="post">
        <input type="hidden" asp-for="IdeaId">
        
        <div>
            <div>
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

        </div>
        <br>
        <button type="submit" class="btn btn-primary text-right">Update Idea</button>
    </form>
</div>