@model Idea

<div>
    <form class="form-group"  asp-controller="Home" asp-action="CreateIdea" method="post">

        <div>
            <div>
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

        </div>
        <br>
        <button type="submit" class="btn btn-primary text-right">Add Idea</button>
    </form>
</div>